<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
<% end %>

<tr>
 	<th><%=link_to 'Show', book_path(@book.id) %></th>
 	<th><%=link_to 'Back', new_book_path %></th>
</tr>